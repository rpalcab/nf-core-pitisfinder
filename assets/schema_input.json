{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://raw.githubusercontent.com/nf-core/pitisfinder/master/assets/schema_input.json",
    "title": "nf-core/pitisfinder pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "sample": {
                "type": "string",
                "pattern": "^\\S+$",
                "errorMessage": "Sample name must be provided and cannot contain spaces",
                "meta": ["id"]
            },
            "fasta": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.fa(sta)?$",
                "errorMessage": "Fasta file for isolate assembly must be provided, cannot contain spaces and must have extension '.fasta' or '.fa'"
            },
            "faa": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.faa$"
            },
            "gbk": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.(gbk|gbff)$"
            },
            "amr": {
                "type": "string",
                "format": "file-path",
                "exists": true,
                "pattern": "^\\S+\\.tab$"
            }
        },
        "required": ["sample", "fasta", "faa", "gbk", "amr"]
    }
}
